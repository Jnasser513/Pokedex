<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="190dp"
    android:layout_height="130dp"
    android:layout_marginStart="@dimen/minimum_gap"
    android:layout_marginBottom="@dimen/minimum_gap"
    app:cardBackgroundColor="#48CFAF"
    app:cardCornerRadius="@dimen/default_gap"
    app:cardElevation="@dimen/default_gap">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/minimum_gap">

        <TextView
            android:id="@+id/card_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintEnd_toStartOf="@id/card_img_pokemon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Pikachu" />

        <ImageView
            android:id="@+id/card_img_pokemon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/description_pokemon"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/pokemon_ability"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ability_style"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="@dimen/minimum_gap"
            android:gravity="center"
            android:text="Electric"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@id/card_img_pokemon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_title" />

        <TextView
            android:id="@+id/pokemon_ability2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ability_style"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="@dimen/minimum_gap"
            android:gravity="center"
            android:text="Electric"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@id/card_img_pokemon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pokemon_ability" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>